html,body
	width 100%
	height 100%
	background-color #f0f0f0
	margin 0
	padding 0
	font-family 'Roboto', sans-serif
header
	display block
	padding 8px 16px
	border-bottom 2px solid #c2c2c2
	>img
		height 60px
		display inline-block
		vertical-align middle
		margin-right 16px
	.title
		display inline-block
		vertical-align middle
		font-size 28px
		text-transform uppercase


/* Sample of menus */
.horizontal
	display block
	>ul
		display block
		margin 0
		padding 0
		list-style none
		>li
			display inline-block
			a
				display block
				padding 4px 8px
				border 1px solid silver

.level-2
	a
		line-height 40px
/* realisation of submenu class*/
.submenu
	position absolute
	margin 0
	padding 0
	display none
	list-style none
	>li
		display block
		a
			display block
			padding 4px 8px
	&.active
		display block
